!                              -*-f90-*-     (for emacs)
!
!  Initialisation parameters for dust particles moving in a random
!  velocity field.
!
&init_pars
  cvsid='$Id: start.in 12078 2009-11-14 16:52:27Z ajohan@strw.leidenuniv.nl $',
  xyz0  = -2.1, -2.1, -0.26
  xyz1  =  2.1,  2.1,  0.26
  lperi =    T,    T,    T
  r_int=0.4
  r_ext=2.0
  lcylinder_in_a_box=T
  llocal_iso=T
  lcylindrical_gravity=T
  lwrite_ic=T
  lwrite_aux=T
  r_ref=1
  seed0=1
/
&initial_condition_pars
  ptlaw=1
  plaw=0.5
  lcorrect_selfgravity=T
  gravitational_const=8.9e-4
/
&eos_init_pars
  cs0=0.05
  rho0=1
  gamma=1
/
&hydro_init_pars
/
&density_init_pars
  lnrho_const=0
  ldensity_nolog=T
  density_floor=-100
/
&grav_init_pars
  ipotential='no-smooth'
  g0=1
/
&selfgrav_init_pars
  gravitational_const=8.9e-4
  lselfgravity_gas=T
/
&poisson_init_pars
  lrazor_thin=T
  lexpand_grid=T
/
&particles_init_pars
  initxxp='random-cylindrical', initvvp='Keplerian'
  pdlaw=0.5
!  bcpx='flk',bcpy='out',bcpz='p'
  bcpx='rmv',bcpy='out',bcpz='p'
  lparticlemesh_tsc=T
  tausp_species=0.01,0.1,0.3,1.
  lmigration_real_check=T
  rhopmat=1.0
  eps_dtog=0.01
/
&particles_selfgrav_init_pars
  lselfgravity_particles=F !for start time
/
