!                           -*-f90-*-     (for Emacs)
!
!  Initialisation parameters
!
&init_pars
  cvsid='$Id$',
  ip=10,                        ! debugging parameter
  xyz0  =  0.2,-3.1415,-0.26,       ! first corner of box
  xyz1  =  2.7, 3.1415, 0.26,       ! second corner of box

  lperi = F  , T  , T,         ! periodic direction?

  bcx = 's','a','s','a2'
!reflective
!  bcx = 's','a2','s','a2'
!outflow
!  bcx = 'cop','a2','s','a2'

  llocal_iso=T
  lwrite_ic=T
  coord_system='cylindrical'
  lcylindrical_gravity=T
/
&eos_init_pars
  cs0  = 0.05 
  rho0 = 1.
  ptlaw= 1. !temperature power-law
  gamma= 1.
/
&hydro_init_pars
  inituu='centrifugal-balance'
/
&density_init_pars
  initlnrho='local-isothermal'
  lnrho_const=0.  
  ldensity_nolog=T
  plaw=0.5  !density power-law
/
&grav_init_pars
  ipotential='no-smooth'
  g0=1.
/
