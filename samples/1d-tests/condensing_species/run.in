!  -*-f90-*-  (for Emacs)    vim:set filetype=fortran:  (for vim)
!
! Run parameters
!
&run_pars
  ip=14,
  nt=300, it1=100, isave=1000, itorder=3, ialive=0
  cdt=0.8,
  cdtv=0.8,
  dtmin=1e-20
  dsnap=0.005
  dvid=4e-5
  tmax=0.03
  lwrite_aux=T
  lpencil_check=F, lpencil_check_small=F, lpencil_check_no_zeros=F
  random_gen="system"
/
&eos_run_pars
/
&hydro_run_pars
/
&density_run_pars
  lupw_rho=T
/
&entropy_run_pars
  lviscosity_heat=F
  lupw_lnTT=T
/
&chemistry_run_pars
  lfilter      =T
  lreactions   =T
  lcorr_vel    =T
  lgradP_terms =F
  lnormalize_chemspec=F
  isurf_energy="Kingery"
  inucl_pre_exp="oxtoby"
  iconc_sat_spec="Clausius"
  lnoevap=F
/
&viscosity_run_pars
  ivisc='nu-mixture'
/
&pscalar_run_pars
  pscalar_diff=1e-6
/
&particles_run_pars
  gravz_profile='const'
  gravz=0.
  cdtp=0.2
  cdtp_drag=200.
  ldragforce_dust_par=F, ldragforce_gas_par=F
  ldraglaw_steadystate=F, lnostore_uu=F
  ldragforce_heat=F, lnu_draglaw=T, nu_draglaw=1e-5
  lpartnucleation=T
  nucleation_threshold=3e-11
  remove_particle_criteria="size"
  remove_particle_criteria_size=1e-9 ! 0.01 nm
  remove_particle_at_time=1e-19
  lbrownian_forces=T, lbrownian_forces_Li_Ahmadi=T
  tstart_brownian_par=0.0
/
&particles_radius_run_pars
  lcondensation_simplified=F
  lcondensation_par=T,
  lfree_molecule=T
/
&particles_number_run_pars
/
