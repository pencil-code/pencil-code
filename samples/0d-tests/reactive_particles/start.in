!  -*-f90-*-  (for Emacs)    vim:set filetype=fortran:  (for vim)
!
!

&init_pars
  ip = 14
  unit_temperature=1.
  unit_velocity=1.
  unit_length=1.
  unit_system='cgs'
  Lxyz  =  .05, .05, .05
  xyz0 = 0.,0.,0.
/
&eos_init_pars
/
&hydro_init_pars
  inituu='gaussian-noise'
  ampluu=1e-3
/
&density_init_pars
  ldensity_nolog=F
  initlnrho='const_lnrho'
  lnrho_const=0.0
/
&entropy_init_pars
! see air.dat
/
&chemistry_init_pars
  initchem='air'
  lchemistry_diag=F
/
&particles_init_pars
  initxxp='random'
  initvvp='constant'
  interp_pol_rho='cic'
  interp_pol_TT='cic'
  interp_pol_uu='cic'
  eps_dtog=1.0
  mean_free_path_gas=2.9e-7 !cm, 24bar
/
&particles_radius_init_pars
  initap='constant'
  lsweepup_par=F
  ap0=5e-3 ! cm
  rhopmat=1.3 ! g/cm^3
/
&particles_stalker_init_pars
/
&particles_mass_init_pars
   init_particle_mass='rhopmat'
/
&particles_TT_init_pars
  init_particle_temperature='constant'
  init_part_temp=1000.
  cp_part=7.09e6 ! erg/(g K)
/
&particles_ads_init_pars
/
&particles_surf_init_pars
  init_surf_mol_frac=0.,0.8033,0.1967
  init_surf='constant'
/
&particles_chem_init_pars
/
