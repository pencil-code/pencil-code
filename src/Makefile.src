  ifneq ($(MODULE_CMD),)
    HDF5_LOADED := $(shell (module list |& grep -i hdf5) || (module list |& grep -i hf5) )
    ifeq ($(HDF5_LOADED),)
no_hdf5_message:
	@echo ";;;"
	@echo ";;; No HDF5 module seems to be loaded! Exit."
	@echo ";;; Try (one of) the following: $(shell (module avail |& grep -i hdf5 | sed -e's/^.* \([^ ]*[Hh][Dd][Ff]5[^ ]*\) .*$$/\1/') )"
	@echo ";;;"
	@exit 1

    endif
  endif
endif
#
