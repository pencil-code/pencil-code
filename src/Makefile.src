  else
    IO_IN_OBJ  =$(IO_IN).o
    IO_IN_SRC  =$(IO_IN).f90
    IO_OUT    :=$(IO)
    IO_OUT_OBJ =$(IO_OUT).o
    IO_OUT_SRC =$(IO_OUT).f90
    IO         =io_wrapper
  endif
endif
IO_OBJ=$(IO).o
IO_SRC=$(IO).f90
