#    s/\bPRINT\b/prints\$(PC_META_TYPE).o/i;
#    s/\bSNAPSHOT\b/snapshot\$(PC_META_TYPE).o/i;
#    s/\bFARRAYMANAGER\b/farray\$(PC_META_TYPE).o/i;
#    s/\bSHAREDVARIABLES\b/shared_variables\$(PC_META_TYPE).o/i;
